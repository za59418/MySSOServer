@model SSOServer.Db.SYSTEMINFO

@{
    ViewBag.Title = "注册客户端";
}

<script type="text/javascript">
    function RedAlert()
    {
        if (!document.getElementById("CLIENTID").value) {
            alert("客户端ID不能为空");
            document.getElementById("CLIENTID").focus();
            return false;
        }
        if (!document.getElementById("CLIENTNAME").value) {
            alert("客户端名称不能为空");
            document.getElementById("CLIENTNAME").focus();
            return false;
        }
        if (!document.getElementById("REDIRECTURIS").value) {
            alert("跳转地址不能为空");
            document.getElementById("REDIRECTURIS").focus();
            return false;
        }
        return true;
    }
</script>

<link rel="stylesheet" href="~/assets/css/loader-style.css">
<link rel="stylesheet" href="~/assets/css/bootstrap.css">

<div class="content-wrap">
    <div class="row">
        <div class="col-sm-12">
            <div class="nest" id="elementClose">
                <div class="title-alt">
                    <h6>
                        注册客户端
                    </h6>
                    <div class="titleClose">
                        <a class="gone" href="#elementClose">
                            <span class="entypo-cancel"></span>
                        </a>
                    </div>
                    <div class="titleToggle">
                        <a class="nav-toggle-alt" href="#element">
                            <span class="entypo-up-open"></span>
                        </a>
                    </div>
                </div>
                <div class="body-nest" id="element">
                    <div class="panel-body">
                        @using (Html.BeginForm("DoRegistClient", "Home", FormMethod.Post, new { @class="form-horizontal bucket-form" }))
                        {
                            <div class="form-group">
                                <label class="col-sm-3 control-label">客户端ID（标识）</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.CLIENTID, new { @class = "form-control" })
                                    <span class="help-block"><i style="color:red;">*</i> &nbsp;连接单点登陆服务器的唯一标识.</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">客户端名称</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.CLIENTNAME, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">声明</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.ALLOWEDSCOPES, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">跳转地址</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.REDIRECTURIS, new { @class = "form-control" })
                                    <span class="help-block"><i style="color:red;">*</i> &nbsp;登陆后的跳转地址.</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">弹出授权页面</label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(model => model.REQUIRECONSENT, ViewData["consents"]as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-6">
                                    <button class="btn btn-primary" onclick="return RedAlert();" type="submit">确定</button>
                                    <a class = "btn btn-default" href="@Url.Action("Index","Home")">取消</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
